{
  "id": "net.i-dev.betterlogic",
  "version": "1.0.5",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Better Logic",
    "de": "Bessere Logik"
  },
  "description": {
    "en": "Just some better logic",
    "de": "Einfach nur bessere Logik"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Patrick Sannes",
    "email": "patrick@i-dev.net"
  },
  "contributors": {
  "developers": [
      {
        "name": "Job Born",
        "email": "jobborn@gmail.com"
      }
    ]
  },
  "homeyCommunityTopicId": 5568,
  "flow": {
    "triggers": [
      {
        "id": "if_variable_changed",
        "title": {
          "en": "A variable changed",
          "de": "Eine Variable hat sich geändert"
        },
        "hint": {
          "en": "Triggers if a variable value changed.",
          "de": "Löst aus wenn sich eine Variable geändert hat"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Variable name",
              "de": "Variablenname"
            }
          }
        ]
      },
      {
        "id": "if_variable_set",
        "title": {
          "en": "A variable is set",
          "de": "Eine Variable wurde gesetzt"
        },
        "hint": {
          "en": "Triggers if a variable is set (not necessarily changed)",
          "de": "Löst aus wenn eine Variable gesetzt wurde (nicht unbedingt geändert)"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Variable name",
              "de": "Variablenname"
            }
          }
        ]
      },
      {
        "id": "if_number_variable_changed",
        "title": {
          "en": "A number variable changed",
          "de": "Eine numerische Variable hat sich geändert"
        },
        "hint": {
          "en": "Triggers if a number variable is changed.",
          "de": "Löst aus wenn sich eine numerische Variable geändert hat"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Variable name",
              "de": "Variablenname"
            }
          },
          {
            "name": "action",
            "type": "dropdown",
            "values": [
              {
                "id": "changed",
                "label": { "en": "min. changed by", "de": "Min. geändert um" }
              },
              {
                "id": "increased",
                "label": { "en": "min. increased with", "de": "Min. erhöht um" }
              },
              {
                "id": "decreased",
                "label": { "en": "min. decreased with", "de": "Min. verringert um" }
              }
            ],
            "placeholder": {
              "en": "Select action",
              "de": "Aktion auswählen"
            }
          },
          {
            "name": "amount",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "Variable name",
              "de": "Variablenname"
            }
          }
        ]
      },
      {
        "id": "if_one_of_variable_changed",
        "title": {
          "en": "One of these variables changed",
          "de": "Eine der Variablen hat sich geändert"
        },
        "hint": {
          "en": "Type the variable names seperated by a comma.\nTags will not work in this card.",
          "de": "Gebe die Variablennamen getrennt von einem Komma ein.\nTags werden hier nicht funktionieren."
        },
        "args": [
          {
            "name": "variable",
            "type": "text",
            "placeholder": {
              "en": "Var1, Var2, Var3",
              "de": "Var1, Var2, Var3"
            }
          }
        ]
      },
      {
        "id": "debug_any_variable_changed",
        "title": {
          "en": "Any variable changed (DEBUG)",
          "de": "Beliebige Variable hat sich geändert (DEBUG)"
        }
      }
    ],
    "conditions": [
      {
        "id": "variable_contains",
        "title": {
          "en": "!{{Text contains|Text does not contain}}",
          "de": "!{{Text enthält|Text enthält nicht}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "variable_starts_with",
        "title": {
          "en": "!{{Text starts with|Text does not start with}}",
          "de": "!{{Text beginnt mit|Text beginnt nicht mit}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "variable_matches_string",
        "title": {
          "en": "!{{Text is exact|Text is not exactly}}",
          "de": "!{{Text ist exakt|Text ist nicht exakt}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "variable_matches_number",
        "title": {
          "en": "!{{Number is exact|Number is not exactly}}",
          "de": "!{{Zahl ist exakt|Zahl ist nicht exakt}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          },
          {
            "name": "value",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "variable_greater_than",
        "title": {
          "en": "!{{|not}} greater than",
          "de": "!{{Größer als|Nicht größer als}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          },
          {
            "name": "value",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "variable_less_than",
        "title": {
          "en": "!{{|not}} less than",
          "de": "!{{Kleiner als|Nicht kleiner als}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          },
          {
            "name": "value",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "variable_is_equal",
        "title": {
          "en": "!{{is true|is false}}",
          "de": "!{{Ist Ja|Ist Nein}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "expression",
        "title": {
          "en": "Math.js expression !{{is true|is false}}",
          "de": "Math.js expression !{{ist wahr|ist falsch}}"
        },
        "args": [
          {
            "name": "expression",
            "type": "text",
            "placeholder": {
              "en": "$v1$ > 100 and $v1$ < 200 and $b1$",
              "de": "$v1$ > 100 and $v1$ < 200 and $b1$"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_string_variable",
        "title": {
          "en": "Set string variable",
          "de": "Setze Stringvariable"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "set_number_variable",
        "title": {
          "en": "Set number variable",
          "de": "Setze numerische Variable"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "increment_number_variable",
        "title": {
          "en": "Increment number variable",
          "de": "Erhöhe numerische Variable"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "decrement_number_variable",
        "title": {
          "en": "Decrement number variable",
          "de": "Verringere numerische Variable"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "number",
            "step": 0.01,
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "execute_expression",
        "title": {
          "en": "Execute mathjs expression",
          "de": "Ausführen von einer mathjs expression"
        },
        "args": [
          {
            "name": "expression",
            "type": "text",
            "placeholder": {
              "en": "($n1$ * 42) + 1",
              "de": "($n1$ * 42) + 1"
            }
          },
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          }
        ]
      },
      {
        "id": "set_boolean_variable",
        "title": {
          "en": "Set boolean variable",
          "de": "Eine Ja/Nein Variable setzen"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          },
          {
            "name": "boolean_value",
            "type": "dropdown",
            "values": [
              {
                "id": "true",
                "label": { "en": "True", "de": "Ja" }
              },
              {
                "id": "false",
                "label": { "en": "False", "de": "Nein" }
              }
            ]
          }
        ]
      },
      {
        "id": "flip_boolean_variable",
        "title": {
          "en": "Flip boolean variable",
          "de": "Eine Ja/Nein Variable umschalten"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          }
        ]
      },
      {
        "id": "trigger_variable",
        "title": {
          "en": "Execute a trigger",
          "de": "Ein Trigger auslösen"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          }
        ]
      },
      {
        "id": "set_a_variable",
        "title": {
          "en": "Set a variable",
          "de": "Eine variable setzen"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "value",
              "de": "Wert"
            }
          }
        ]
      }

    ]
  },
  "drivers": [
    {
      "id": "bitflip",
      "name": {
        "en": "BitFlip",
        "de": "BitFlip"
      },
      "images": {
        "large": "drivers/bitflip/assets/images/large.jpg",
        "small": "drivers/bitflip/assets/images/small.jpg"
      },
      "class": "socket",
      "capabilities": [ "onoff" ],
      "pair": [
        {
          "id": "list_booleans",
          "template": "list_devices",
          "navigation": {
            "next": "add_booleans"
          }
        },
        {
          "id": "add_booleans",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "numslide",
      "name": {
        "en": "NumSlide",
        "de": "NumSlide"
      },
      "images": {
        "large": "drivers/numslide/assets/images/large.jpg",
        "small": "drivers/numslide/assets/images/small.jpg"
      },
      "class": "windowcoverings",
      "capabilities": [ "dim" ],
      "mobile": {
        "components": [
          {
            "id": "sensor",
            "capabilities": [ "dim" ],
            "options": {
              "icons": {
                "dim": "./drivers/numslide/assets/icons/icon.svg"
              }
            }
          },
          {
            "id": "slider",
            "capabilities": [ "dim" ]
          }
        ]
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_numbers",
          "template": "list_devices",
          "navigation": {
            "next": "add_numbers"
          }
        },
        {
          "id": "add_numbers",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "trigger",
      "name": {
        "en": "Trigger",
        "de": "Trigger"
      },
      "images": {
        "large": "drivers/trigger/assets/images/large.jpg",
        "small": "drivers/trigger/assets/images/small.jpg"
      },
      "class": "button",
      "capabilities": [ "button" ],
      "pair": [
        {
          "id": "list_triggers",
          "template": "list_devices",
          "navigation": {
            "next": "add_triggers"
          }
        },
        {
          "id": "add_triggers",
          "template": "add_devices"
        }
      ]
    }
  ]
}
